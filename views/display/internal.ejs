<body
  class="
    hold-transition
    sidebar-mini
    layout-fixed layout-navbar-fixed layout-footer-fixed
    dark-mode
  "
  style="overflow: hidden"
>
  <canvas
    id="wrapper"
    style="width: 100%; height: 100%; background: #000000; display: none"
  ></canvas>

  <div
    class="content"
    id="dj-alert"
    style="
      background: #000000;
      display: none;
      z-index: 99999;
      position: fixed;
      left: 0;
      top: 0;
      width: 100vw;
      height: 100vh;
      text-shadow: 1px 2px 1px rgba(0, 0, 0, 0.3);
    "
  ></div>

  <div
    class="content"
    id="eas-alert"
    style="
      background: #0000ff;
      display: none;
      z-index: 90000;
      position: fixed;
      left: 0;
      top: 0;
      width: 100vw;
      height: 100vh;
      text-shadow: 1px 2px 1px rgba(0, 0, 0, 0.3);
    "
  ></div>

  <!-- All other content -->
  <div class="wrapper" id="content">
    <!-- Navbar (broadcast operations buttons and times) -->
    <nav
      class="main-header navbar navbar-dark navbar-gray-dark"
      id="nowplaying"
      style="
        height: 15vh;
        position: fixed;
        top: 0;
        width: 100%;
        overflow-y: hidden;
        overflow-x: auto;
      "
    >
      <ul class="navbar-nav" style="width: 100%">
        <div
          class="text-center font-weight-bold"
          style="
            color: #ffeb3b;
            font-size: 3vh;
            text-shadow: 1px 2px 1px rgba(0, 0, 0, 0.3);
          "
          id="nowplaying-time"
        >
          DISCONNECTED FROM WWSU
        </div>
        <div
          style="
            color: #ffffff;
            font-size: 3vh;
            text-shadow: 1px 2px 1px rgba(0, 0, 0, 0.3);
            overflow: hidden;
          "
          id="nowplaying-lines"
        >
          <div class="text-center" id="nowplaying-line1"></div>
          <div class="text-center" id="nowplaying-line2"></div>
        </div>
      </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Menu -->
    <aside
      class="main-sidebar sidebar-dark-danger elevation-2"
      style="width: 300px"
    >
      <!-- Sidebar -->
      <div class="sidebar" style="margin-top: 0px">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
          <img
            src="/images/display/logo_menu.jpg"
            style="width: 100%; height: 100%"
          />
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2 sidebar-nav"></nav>
        <!-- /.sidebar-menu -->
      </div>
      <!-- /.sidebar -->
    </aside>

    <div
      style="
        margin-left: 315px;
        margin-right: 5px;
        margin-top: 16vh;
        position: relative;
      "
      class="content-wrapper"
      id="slide-contents"
    ></div>

    <!-- Main Footer -->
    <footer
      class="main-footer text-white"
      style="
        height: 7vh;
        font-size: 3vh;
        text-shadow: 1px 2px 1px rgba(0, 0, 0, 0.3);
        padding-left: 60px;
      "
    >
      <div id="footer-ticker" style="overflow: hidden"></div>
    </footer>
  </div>
  <!-- ./wrapper -->

  <script src="/plugins/wwsu-display/internal.js?t=202106181720"></script>
</body>
