      <!-- Main Footer -->
      <footer class="main-footer">
        <div id="single-song-player">
          <div class="bottom-container">
            <div class="amplitude-visualization"></div>
            <div class="control-container">
              <div class="amplitude-play-pause" id="play-pause"></div>
              <div class="meta-container">
                <span class="nowplaying-line1"></span>
                <span class="nowplaying-line2"></span>
              </div>
            </div>
          </div>
        </div>
        <p>
          <strong>Disclaimer:</strong> The WWSU Listener's Corner is maintained
          by WWSU and not Wright State University.
        </p>
      </footer>
    </div>

