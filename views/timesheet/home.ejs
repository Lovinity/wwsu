    <div class="row">
        <div class="col-sm-6 form-group">
            <div class="input-group" id="DateDemo">
	<form action="javascript:filterDate()" method="post" class="form">
              <input type='date' id='weekly-date-picker' name="firstdate" value="<%= currentDate %>" />
              <input type="submit" class="btn btn-default" value="Filter">
              </form>
              <button class="btn btn-info" id="csvExport">CSV Export</button>
          </div>
      </div>
  </div>
</div>
		<table border="1" class="table table-hover" cellpadding="1" cellspacing="1" style="width: 100%;" id="timesheet-table">
		<thead>
